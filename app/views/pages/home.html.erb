<section class="comntainer text-center mx-5 ">
    <div class="row home-bg mx-5 mt-3 mb-5">
        <div class="col-6 mx-auto py-5 my-5">
            <h2 class="text-white">Experience Any Place Like a Local</h2>
            <%= form_for :search do |f| %>
                <%= f.text_field :destination, placeholder: "Where are you going?", class: "form-control text-center" %>

                <div class="row mt-2">
                    <div class="col-6">
                        <%= f.text_field :checkin_date, placeholder: "Check In", class: "form-control text-center" %>
                    </div>
                    <div class="col-6">
                        <%= f.text_field :checkout_date, placeholder: "Check Out", class: "form-control text-center" %>
                    </div>
                </div>
                <%= f.submit "Search", class: "btn btn-outline-primary mx-auto text-white px-3 mt-2" %>
            <% end %>
        </div>
    </div>   
</section>
<section class="container mb-5">
    <h2>Accommodations</h2>
    <hr>
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <%= link_to root_path, class:"hover" do %>
                        <%= image_tag "https://cdn.pixabay.com/photo/2016/08/11/23/48/mountains-1587287__480.jpg", class: "w-100 text-center" %>
                    <% end %><br>
                    <h4 class="my-2"><%= link_to "Incredible Place", root_path, class: "text-dark" %></h4>
                    <p class="text-muted mb-0">
                        $ 600<br>
                        House<br>
                        5 Bedrooms<br>
                        <i class="fa fa-heart"></i>
                        <i class="fa fa-heart"></i>
                        <i class="fa fa-heart"></i>
                        <i class="fa fa-heart"></i>
                        <i class="fa fa-heart"></i><br>
                        0 Reviews
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

    <h2>Cities</h2>
    <hr>
    <div class="row text-center">
        <div class="col-3 paris-bg py-5 hover">
            <br><br><br><br>
            <h3><%= link_to "Paris", root_path, class: "text-white p-5" %></h3>
            <br><br><br><br>
        </div>

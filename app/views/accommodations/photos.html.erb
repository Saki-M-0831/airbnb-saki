<section class="container">
    <div class="row">
        <div class="col-3">
            <%= render "sidebar" %>
        </div>
        <div class="col-9">
            <div class="card">
                <div class="card-header">
                    <h4 class="my-0">Photos</h4>
                </div>
                <div class="card-body"> 
                    <%= form_for :photo do |f| %>
                        <div class="px-3 text-center">
                            <%= f.file_field :picture, class: "form-control", required: true %>
                        </div>
                        <div class="col-3 text-center mx-auto mt-3">
                            <%= f.submit "Save", class: "btn btn-primary px-4" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>

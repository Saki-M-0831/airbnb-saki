<section class="container">
    <div class="row">
        <%= image_tag @accommodation.photos.first.image, class: "w-100 mb-3" %>
        <div class="col-8">
            <div class="row">
                <div class="col-9">
                    <h1 class="mb-0"><%= @accommodation.name %></h1>
                    <i class="fa fa-map-pin"></i> <%= @accommodation.location %>
                </div>
                <div class="col-3 text-center">
                    <%= link_to root_path do %>
                        <% if @accommodation.user.image? %>
                            <%= image_tag @accommodation.user_id.image, :size => "80x80" %>
                        <% else %>
                            <%= image_tag "https://cdn.pixabay.com/photo/2015/12/22/04/00/photo-1103597__480.png", :size => "80x80" %>
                        <% end %>
                    <% end %><br>
                    <%= link_to @accommodation.user.name, root_path, class:"text-dark" %>
                </div>
            </div>
            <hr>
            <div class="row text-center">
                <div class="col-3">
                    <i class="fa fa-home fa-3x"></i>
                    <p class="my-0"><%= @accommodation.home_type %></p>
                </div>
                <div class="col-3">
                    <i class="fa fa-user fa-3x"></i>
                    <p class="my-0"><%= @accommodation.accommodate %> Guests</p>
                </div>
                <div class="col-3">
                    <i class="fa fa-bed fa-3x"></i>
                    <p class="my-0"><%= @accommodation.bedroom_count %> Bedroom</p>
                </div>
                <div class="col-3">
                    <i class="fa fa-bath fa-3x"></i>
                    <p class="my-0"><%= @accommodation.bathroom_count %> Bathroom</p>
                </div>
            </div>
            <hr>
            <h3>About this listing</h3>
            <%= @accommodation.summary %>
            <hr>
            <div class="row">
                <div class="col-6">
                    <h3>Amenities</h3>
                </div>
                <div class="col-3 mt-2">
                    <p class="<%= text_slash(@accommodation.has_tv) %>">TV</p>
                    <p class="<%= text_slash(@accommodation.has_kitchen) %>">Kitchen</p>
                    <p class="<%= text_slash(@accommodation.has_internet) %>">Internet</p>
                </div>
                <div class="col-3 mt-2">
                    <p class="<%= text_slash(@accommodation.has_heating) %>">Heating</p>
                    <p class="<%= text_slash(@accommodation.has_ac) %>">Air Conditioner</p>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-3">
                    <h3>0 Reviews</h3>
                </div>
                <div class="col-9 pt-2">
                    <i class="fa fa-heart"></i>
                    <i class="fa fa-heart"></i>
                    <i class="fa fa-heart"></i>
                    <i class="fa fa-heart"></i>
                    <i class="fa fa-heart"></i>
                </div>
            </div>
            <p>No reviews yet...</p>
            <hr>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <% @photos.each do |photo| %>
                    <div class="carousel-item active">
                        <%= image_tag photo.image, class: "d-block w-100" %>
                    </div>
                    <% end %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <hr>
            <div class="">
                add map here
            </div>
            <hr>
            <h3>Places Nearby</h3>
            <p>No places near by...</p>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <p class="mb-0">$<%= @accommodation.price %></p>
                        </div>
                        <div class="col-6 text-right">
                            <p class="mb-0">Per Night</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <%= form_for :booking do |f| %>
                        <div class="row">
                            <div class="col-6">
                                <%= f.label :check_in, "Check In" %><br>
                                <%= f.date_field :check_in, class: "form-control", require: true %>
                            </div>
                            <div class="col-6">
                                <%= f.label :check_out, "Check Out" %><br>
                                <%= f.date_field :check_out, class: "form-control", require: true %>
                            </div>
                            <%= f.submit "Book Now", class: "btn btn-outline-primary btn-block mx-3 mt-3" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
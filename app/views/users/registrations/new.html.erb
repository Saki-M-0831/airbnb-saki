<section class="container text-center">
    <div class="jumbotron w-50 mx-auto">
        <div class="container">
            <h1>Sign Up</h1>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>

                <div class="field my-4">
                    <%= f.text_field :name, autofocus: true, placeholder: "Full Name", autocomplete: "name", class:"w-75" %>
                </div>

                <div class="field mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"w-75" %>
                </div>

                <div class="field mt-4">
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class:"w-75" %>
                    <div class="">
                        <% if @minimum_password_length %>
                            <em class="text-muted text-right">*<%= @minimum_password_length %> characters minimum</em>
                        <% end %>
                    </div>
                </div>

                <div class="field mt-3">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class:"w-75" %>
                </div>

                <div class="actions mt-4">
                    <%= f.submit "Sign up", class:"btn btn-primary" %>
                </div>
            <% end %>

            <%= render "users/shared/links" %>
        </div>
    </div>  
</section>

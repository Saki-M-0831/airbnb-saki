<section class="container text-center">
    <div class="jumbotron w-50 mx-auto">
        <div class="container">
            <h1 class="mb-3">Change your password</h1>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "shared/devise_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>

                <div class="field my-3 mx-4">
                    <%= f.password_field :password, autofocus: true, placeholder: "New password", autocomplete: "new-password", class:"form-control" %>
                    <% if @minimum_password_length %>
                        <em class="text-muted">*(<%= @minimum_password_length %> characters minimum)</em><br/>
                    <% end %>
                </div>

                <div class="field my-3 mx-4">
                    <%= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "new-password", class:"form-control" %>
                </div>

                <div class="actions mx-4">
                    <%= f.submit "Change my password", class:"btn btn-primary px-4 w-50" %>
                </div>
            <% end %>

            <%= render "users/shared/links" %>
        </div>
    </div>
</section>

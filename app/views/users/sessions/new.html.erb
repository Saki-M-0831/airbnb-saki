<section class="container text-center">
    <div class="jumbotron w-50 mx-auto">
        <div class="container">
            <h2>Sign In</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field my-3 mx-4">
                    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-control" %>
                </div>

                <div class="field my-3 mx-4">
                    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="field mt-3 mx-4">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                    </div>
                <% end %>

                <div class="actions">
                    <%= f.submit "Sign In", class:"btn btn-primary px-4 w-50" %>
                </div>
            <% end %>

            <%= render "users/shared/links" %>
        </div>
    </div>  
</section>
